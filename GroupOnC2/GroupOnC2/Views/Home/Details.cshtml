@model GroupOnC2.Models.CHITIETSANPHAM
@{
	ViewBag.Title = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
     <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>

     
    <link rel="stylesheet" href="../../Content/CSS/nivo-slider.css" type="text/css" />
    <link rel="stylesheet" href="../../Content/CSS/nivo-style.css" type="text/css" />
     <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js"></script>
     <script  type="text/javascript" src="../../Content/scripts/jquery.nivo.slider.pack.js"></script>

     <script type="text/javascript">
        $(document).ready(function() {
            $('#slider').nivoSlider({
        effect:'fade', //Specify sets like: 'fold,fade,sliceDown'
        slices: 8,
        directionNav:true, //Next & Prev
        directionNavHide:true, //Only show on hover
        controlNav:true, //1,2,3...
        keyboardNav:true, //Use left & right arrows
   
            });
        });
     </script>


<div class="col_left_main">
    <div class="col_left">
        <div class="col_left_T">
        </div>

        <div class="col_left_M">
            <h2 class="product_detail_name">
                Tên sản phẩm</h2>
            <div class="product_detail_co">
                <div id = "slider" class = "nivoSlider" style="position: absolute !important"> 
				    @functions {int i = 0;}
				    @foreach (var str in @Model.AnhBia)
	                {
		
					    <img src = "@Model.AnhBia.ElementAt(i)" alt="@Model.AnhBia.ElementAt(i)" title="@Model.AnhBia.ElementAt(i)" width="496px" height="300px" style="position: absolute; opacity: 1; top: 0px; z-index: 5; left: -496px; display: none; "/>
		                i++;
	                }     
				</div>

                <div class="product_detail_info" style="position: relative;">
                    <div class="product_detail_price">
                        @Html.DisplayFor(model => model.GiaBan) </div>

                    <p class="info_price">
                        @Html.DisplayFor(model => model.GiaGoc)</p>

                    <p class="info_price1">
                        Giảm 33%</p>

                    <p class="info_btn">
                        <input onmouseover="images/general/btn_buy_hover.png" 
                        onmouseout="images/general/btn_buy.png" 
                        type="image" src="../../Content/themes/images/btn_buy.png" 
                        onclick="purchase1()">
                       
                    </p>

                    <p class="info_time">
                        <text>Số người cùng mua </text>
                        <br>
                        <span> @Html.DisplayFor(model => model.SoLuong)</span>
                    </p>

                </div>
                <br class="clean">
            </div>

            <div class="clean">
            </div>

        </div>

        <div class="col_left_B1">
            <p style="width: 200px; border-right: 1px solid #939598; min-height: 21px;">
                 Còn lại:
                <span style="color: #000; font-weight: bold;">
                        <span id="countbox">7 ngày</span>
                </span>
            </p>

            <p style="width: 300px; border-right: 1px solid #939598;">
                <img src="../../Content/themes/images/icon_moto2.png" width="25" height="21" align="absmiddle">
                Giao sản phẩm miễn phí
            </p>

            <p style="width: 100px; margin-left: 20px; height: 20px">
                <iframe src="../../Content/themes/images/like.htm" scrolling="no" frameborder="0" style="border: none; overflow: hidden; height: 20px; width: 90px" allowtransparency="true">
                </iframe>
            </p>
        </div>
    </div>


    <div class="col_left">
        <div class="col_left_T">
        </div>
        <div class="col_left_M">
            <div class="product_detail_content">
                <h3>
                    Giới thiệu chi tiết</h3>
                <div class="product_detail_text">
                    
                    <p>@Model.GioiThieu
                    @functions {int j = 0;}
                    @foreach (var str in @Model.AnhBia)
	                {
                        if (j < @Model.AnhBia.Count)
                        {
                            <img style="text-align: center; display: block; margin-left: auto; margin-right: auto;" title="@Model.AnhBia.ElementAt(j)" src="@Model.AnhBia.ElementAt(j)" alt="@Model.AnhBia.ElementAt(j)" width="496px" height="300px"/>
                        }
                        j++;
                        <p>&nbsp;</p>
                    }  

                    </p>

                    <p style="text-align: center; margin: 10px 0px;">
                        <input onmouseover=""  this.src="#" onmouseout="" type="image" src="../../Content/themes/images/btn_buy.png" onclick=" purchase1()">
                    </p>
                </div>
            </div>

            <div class="comments-deal">            </div>
        </div>

        <div class="col_left_B">
        </div>
    </div>

</div>

<div class="col_right">
    <div class="col_right_T">
    </div>

    <div class="col_right_M">
        <!-- cho for từ đây-->
        <div class="product_other">
            <a href="duong dan cua san pham khac#">
                <h4>
                    Tên sản phẩm</h4>
                <img src="../../Content/themes/images/product/d_6540_s.jpg" width="209" title="Bộ đồ bay - Thiết kế mới lạ, kiểu dáng thời trang, phù hợp đi biển, dạo phố. Giá chỉ 119.000đ" alt="Bộ đồ bay - Thiết kế mới lạ, kiểu dáng thời trang, phù hợp đi biển, dạo phố. Giá chỉ 119.000đ">
                <div class="product_other_info">
                    <p class="product_other_price">
                        119.000đ
                    </p>
                    <p class="product_other_true">
                        238.000đ
                    </p>
                </div>
            </a>
        </div>
        <p style="border-bottom: 1px solid #D5D5D5; margin-right: 2px;" clear="true">
        </p>
        <!-- đến đây-->

    </div>

    <div class="col_right_B">
    </div>
</div>


